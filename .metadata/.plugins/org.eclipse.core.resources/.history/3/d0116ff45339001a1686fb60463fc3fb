
public class OperatorsMath {

	
	public static void main(String[] args) {
		double num1 = 0.4;
		double num2 = 0.3;
		double result;
		char operatorsSum = '+';
		char operatorsDestr = '-';
		char operatorsMultipl = '*';
		char operatorsSubstr = '/';
	    
		result = num1 + num2;
		System.out.println(num1 + " "+operatorsSum+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+operatorsDestr+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+operatorsMultipl+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+operatorsSubstr+num2+" = "+result);
		System.out.println();
	

	}

}
