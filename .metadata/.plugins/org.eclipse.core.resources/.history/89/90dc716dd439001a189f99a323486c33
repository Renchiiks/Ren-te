
public class Calculator {

	
	public static void main(String[] args) {
		
		char operatorMath = '/';
		double num1 = 20.3;
		double num2 = 5.5;
		
		if (operatorMath == '+'){
			System.out.println(num1 + num2);
		}else if(operatorMath == '-'){
			System.out.println(num1 - num2);
		}else if(operatorMath == '*'){
			System.out.println(num1 * num2);
		}else if(operatorMath == '/'){
			System.out.println(num1 / num2);
		}else if(operatorMath == '%'){
			System.out.println(num1 % num2);
		}else{
			System.out.println("Wrong data");
		}

	}

}
